<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MiPrimer.ViewPage.FormCategoria"
             Title="{Binding Titles}">
    
    <ContentPage.Content>
        <StackLayout BindingContext="{Binding oCategoriaCLS}">
            <Label Text="Id Categoria" />
            <Entry Text="{Binding IdCategory}"/>
            <Label Text="Nombre" />
            <Entry Text="{Binding nombre}"/>
            <Label Text="Descripcion" />
            <Entry Text="{Binding descripcion}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>